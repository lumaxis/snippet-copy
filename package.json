{
	"name": "snippet-copy",
	"displayName": "Snippet Copy",
	"description": "Easily copy snippets of code without unnecessary indentation, making it easier to share them e.g. via Slack",
	"version": "0.1.1",
	"preview": true,
	"publisher": "lumaxis",
	"author": {
		"name": "Lukas Spie√ü"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lumaxis/snippet-copy"
	},
	"categories": [
		"Other"
	],
	"engines": {
		"vscode": "^1.44.0"
	},
	"activationEvents": [
		"onCommand:snippet-copy.copySnippet",
		"onCommand:snippet-copy.copySnippetAsMarkdownCodeBlock"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "snippet-copy.copySnippet",
				"title": "Copy Snippet Without Leading Indentation"
			},
			{
				"command": "snippet-copy.copySnippetAsMarkdownCodeBlock",
				"title": "Copy Snippet Without Leading Indentation as Markdown Code Block"
			}
		],
		"configuration": {
			"title": "Snippet Copy",
			"properties": {
				"snippet-copy.addLanguageIdentifierToMarkdownBlock": {
					"type": "boolean",
					"default": false,
					"description": "Add a programming language identifier to the beginning of the Markdown code block. This is incompatible with some apps, for example Slack."
				}
			}
		},
		"keybindings": [
			{
				"command": "snippet-copy.copySnippet",
				"mac": "Cmd+Ctrl+c",
				"linux": "Meta+Ctrl+c",
				"win": "Win+Ctrl+c",
				"when": "editorHasSelection"
			},
			{
				"command": "snippet-copy.copySnippetAsMarkdownCodeBlock",
				"mac": "Cmd+Ctrl+Shift+c",
				"linux": "Meta+Ctrl+Shift+c",
				"win": "Win+Ctrl+Shift+c",
				"when": "editorHasSelection"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "snippet-copy.copySnippet",
					"when": "editorHasSelection",
					"group": "9_cutcopypaste@2"
				},
				{
					"command": "snippet-copy.copySnippetAsMarkdownCodeBlock",
					"when": "editorHasSelection",
					"group": "9_cutcopypaste@3"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.4",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
